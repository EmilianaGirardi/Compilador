TIPO_UNSIGNED FUN funcion1 ( TIPO_OCTAL x )
	    BEGIN
	        IF ( x = 045)  THEN
	            BEGIN
	                RET (45);
	            END
	        ELSE BEGIN
	           RET(90);
	        END
	        END_IF;

            RET(500);

	    END;

TIPO_OCTAL x;
x:= 047;

funcion1(x);

TIPO_UNSIGNED y;
y:= 45;

END;