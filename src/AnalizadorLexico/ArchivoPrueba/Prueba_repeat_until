##Prueba de errores en la sentencia repeat until
prueba BEGIN

    ##Error falta de bloque ejecutaable
    REPEAT UNTIL (x<10);

    ##Repeat bien realizado
    REPEAT
    BEGIN
        t:= 0;
        IF (x > 0) THEN BEGIN x:= x+1; END; END_IF;
    END;
    UNTIL (x = 5);

    ##Error falta de until
    REPEAT
    BEGIN
        variable:=50;
    END;
    (x > 10);

END;